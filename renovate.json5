{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "baseBranches": [
    "main",
    // Attempt recursive renovation
    "renovate/main-alpine-3.x"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s(ENV|ARG) .*?_VERSION=\"(?<currentValue>.*)\"\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "depName=(?<depName>alpine)_(?<major>\\d+)_(?<minor>\\d+)/"
      ],
      "autoReplaceStringTemplate":
        "depName={{{depName}}}_{{{newMajor}}}_{{{newMinor}}}/",
      "currentValueTemplate": "{{{major}}}.{{{minor}}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
    }
  ],
  "packageRules": [
    {
      matchBaseBranches: [
        "renovate/main-alpine-3.x"
      ],
      matchDepNames: [
        "/^alpine_3_.*/"
      ],
      matchDatasources: "repology",
      groupName: "all Alpine packages"
    }
  ]
}